{
  "version": 2,
  "redirects": [
    {
      "source": "/:path*",
      "has": [
        { "type": "host", "value": "image-cut.com" }
      ],
      "destination": "https://www.image-cut.com/:path*",
      "permanent": true
    }
  ],
  "rewrites": [
    {
      "source": "/PDFConvert",
      "has": [{ "type": "host", "value": "www.image-cut.com" }],
      "destination": "/pdfconv.html"
    },
    // The previous rule for www.image-cut.com was:
    // { "source": "/(.*)", "has": [ ... ], "destination": "/index.html" }
    // This rule is DELETED. 
    // Vercel will now automatically serve index.html for the root path (/)
    // and /pdfconv.html for the /PDFConvert path.
    
    {
      "source": "/(.*)",
      "has": [{ "type": "host", "value": "convert.image-cut.com" }],
      "destination": "/converter.html"
    }
  ]
}
