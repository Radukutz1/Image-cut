{
  "version": 2,
  "redirects": [
 
    {
      "source": "/:path*",
      "has": [
        { "type": "host", "value": "image-cut.com" }
      ],
      "destination": "https://www.image-cut.com/:path*",
      "permanent": true
    }
  ],
  "rewrites": [
    {
      "source": "/(.*)",
      "has": [{ "type": "host", "value": "convert.image-cut.com" }],
      "destination": "/converter.html"
    },
    
    {
      "source": "/PDFconvert",
      "has": [{ "type": "host", "value": "www.image-cut.com" }],
      "destination": "/pdfconv.html"
    },
    
    // 3. MAIN HOST CATCH-ALL
    // This handles the root (/) and all other unhandled paths on www.image-cut.com by serving index.html
    {
      "source": "/(.*)",
      "has": [{ "type": "host", "value": "www.image-cut.com" }],
      "destination": "/index.html"
    }
  ]
}
